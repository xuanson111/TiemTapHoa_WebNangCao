@model IEnumerable<TiemTapHoa_WebNangCao.Models.BangLuongView>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    TiemTapHoa_WebNangCao.Models.DBTiemTapHoaEntities db = new TiemTapHoa_WebNangCao.Models.DBTiemTapHoaEntities();
}

<link rel="stylesheet" href="~/assets/CSS/staff.css" />
<link rel="stylesheet" href="~/assets/CSS/management.css" />

<div class="link">
    <h2 class="title">Chấm công</h2>
    <div class="link_body">
        <a href="@Url.Action("Index", "Home")">Home</a>
        <i class="fa-solid fa-angle-right"></i>
        <a href="@Url.Action("Index", "BangLuong")">Chấm công</a>
    </div>
</div>

<div class="data">
    <h2 class="data-title">Danh sách Bảng lương</h2>

    <div class="data-management">
        <div class="data-search">
            <form class="search-input">
                @Html.TextBox("searchString", null, new { placeholder = "Nhập tên nhân viên" })
                <button type="submit" class="buttonSearch">Tìm kiếm</button>
            </form>

            @*<form class="search-filter">
