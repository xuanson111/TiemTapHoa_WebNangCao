        </div>

        <div class="data-update">
            <button class="Btn" onclick="location.href='@Url.Action("Create", "BangLuong")'">Thêm</button>
        </div>
    </div>

    <table class="data-table">
        <tr class="table-head">
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Tháng</th>
            <th>Năm</th>
            <th>Số ngày nghỉ</th>
            <th>Lương</th>
            <th></th>
        </tr>

        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaBL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenNV)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Thang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoNgayNghi)
                    </td>
                    <td>
                        @string.Format("{0:N0}", item.Luong)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaBL }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaBL })
                    </td>
                </tr>
            }
        }

    </table>
</div>

<script>
    let formFilter = document.querySelector('.search-filter');
    let selectElement = formFilter.querySelector('#filter');

    selectElement.onchange = () => {
        formFilter.submit();
    }
</script>

